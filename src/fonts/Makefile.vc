.afm.fmt:
	$(MAKEFMT) $**

.gle.fve:
	$(PROJECT_BINDIR)\bin\fbuild$(D) $**

clean:
	-$(RM) *.fve *.fmt $(PROJECT_BINDIR)\font\*.fve $(PROJECT_BINDIR)\font\*.fmt $(PROJECT_BINDIR)\font\font.dat $(PROJECT_BINDIR)\font\psfont.dat
	-$(RMDIR) $(PROJECT_BINDIR)\font


movefonts:
	-mkdir /Ne $(PROJECT_BINDIR)\font
	-copy /QE *.fve *.fmt font.dat psfont.dat $(PROJECT_BINDIR)\font

d2u:
	d2u -u -z $(AFM)


