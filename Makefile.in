# global makefile for gle
# @configure_input@

.PHONY : all
.PHONY : clean
.PHONY : distclean
.PHONY : cleansrc
.PHONY : cleandoc
.PHONY : cleanfonts
.PHONY : install
.PHONY : uninstall
.PHONY : bundle
.PHONY : glegs
.PHONY : qmake
.PHONY : gui
.PHONY : strip
.PHONY : finddeps
.PHONY : doc
.PHONY : license
.PHONY : qgle

.PHONY : make_all
.PHONY : pre_install
.PHONY : post_install
.PHONY : install_script
.PHONY : install_noscript
.PHONY : nsis
